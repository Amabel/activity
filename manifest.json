{
  "manifest_version": 2,
  "name": "Activity for GitHub",
  "version": "1.0.2",
  "description": "Show your personal and organization events on GitHub.",

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "css": [
        "lib/styles/tippy-light-border.css",
        "lib/styles/tippy.css",
        "styles/global.css",
        "styles/popover.css",
        "styles/activity.css"
      ],
      "js": [
        "lib/js/marked.min.js",
        "lib/js/tippy.min.js",
        "lib/js/jquery.min.js",
        "lib/js/popper.min.js",
        "lib/js/bootstrap.min.js",
        "lib/js/moment.min.js",
        "lib/js/utils.js",
        "js/setup.js",
        "js/popover.js",
        "js/event-types.js",
        "js/content-script.js"
      ]
    }
  ],

  "options_page": "options.html",
  "options_ui":
	{
		"page": "options.html",
		"chrome_style": true
  },

  "browser_action":
	{
    "default_title": "Activity for GitHub",
		"default_popup": "popup.html"
	},

  "icons": {
    "16": "images/icons/logo/logo-16x16.png",
    "48": "images/icons/logo/logo-48x48.png",
    "128": "images/icons/logo/logo-128x128.png"
  },

  "web_accessible_resources": [
    "images/icons/*.svg"
  ],

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"

}
