{
  "manifest_version": 2,
  "name": "Activities",
  "version": "0.0.3",
  "description": "Activities for GitHub",

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation"
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "css": ["styles/activities.css"],
      "js": [
        "lib/js/jquery.min.js", 
        "js/contentScript.js",
        "lib/js/popper.min.js",
        "lib/js/bootstrap.min.js",
        "lib/js/moment.min.js"
      ]
    }
  ],

  "options_page": "options.html",
  "options_ui":
	{
		"page": "options.html",
		"chrome_style": true
  },
  
  "browser_action": 
	{
    "default_title": "GitHub Activities",
		"default_popup": "popup.html"
	},

  "icons": {
   
  },

  "web_accessible_resources": [
    "images/icons/*.svg"
  ]
}
